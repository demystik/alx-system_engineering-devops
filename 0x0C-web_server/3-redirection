#!/usr/bin/env bash
#Configure your Nginx server so that /redirect_me is 
#redirecting to another page.

sudo apt update -y
sudo apt install nginx -y
#sudo sed -i 's/listen\s*80;/listen 80 default_server;/g' /etc/nginx/sites-available/default
echo "Hello World!" >> var/www/default
redirection="server_name _/redirect_me;\nreturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4"
sed -i "s/server_name _;/$redirection/g" etc/nginx/sites-available/default
sudo service nginx start
