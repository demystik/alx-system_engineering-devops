[mysqld]

pid-file        = /var/run/mysqld/mysqld.pid
socket          = /var/run/mysqld/mysqld.sock
datadir         = /var/lib/mysql
log-error       = /var/log/mysql/error.log

# By default we only accept connections from localhost
#bind-address    = 127.0.0.1

server-id=2                 # A unique server ID for the replica (diff from master)
log_bin=/var/log/mysql/mysql-bin.log           # Enable binary logging to replay changes from master
binlog_format=row           # Row-based replication for flexibility
relay_log=/var/log/mysql/mysql-relay-bin.log   # Enable relay logs to store events received from master


# Disabling symbolic-links is recommended to prevent assorted security risks
symbolic-links=0
